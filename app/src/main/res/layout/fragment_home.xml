<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity=""
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_1" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/averiasanslibre"
            android:text="Chatura."
            android:textColor="@color/black"
            android:textSize="22sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/bb"
        android:layout_below="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="30dp"
        android:hint="Search For.."
        android:textSize="20sp"
        android:drawableStart="@drawable/baseline_search_24"
        android:paddingStart="24dp"
        android:drawablePadding="21dp"
        android:paddingEnd="17dp"
        android:background="@drawable/search_edittext"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/bb">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cc"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/widget">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/img_2"
                    android:background="@drawable/bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/averiasanslibre"
                    android:text="Menu Obat"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="80dp"
                    android:fontFamily="@font/averiasanslibre"
                    android:text="Yorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="17dp"
                    app:layout_constraintTop_toBottomOf="@id/txt1"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dd"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@+id/cc"
                android:layout_alignStart="@id/bb"
                android:layout_alignEnd="@id/bb"
                android:layout_marginTop="36dp"
                android:background="@drawable/widget">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/img_3"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/averiasanslibre"
                    android:text="Artikel"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="80dp"
                    android:fontFamily="@font/averiasanslibre"
                    android:text="Yorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="17dp"
                    app:layout_constraintTop_toBottomOf="@id/txt2"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@+id/dd"
                android:layout_alignStart="@id/bb"
                android:layout_alignEnd="@id/bb"
                android:layout_marginTop="36dp"
                android:background="@drawable/widget">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/img_3"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/averiasanslibre"
                    android:text="Artikel"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="80dp"
                    android:fontFamily="@font/averiasanslibre"
                    android:text="Yorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="17dp"
                    app:layout_constraintTop_toBottomOf="@id/txt3"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>