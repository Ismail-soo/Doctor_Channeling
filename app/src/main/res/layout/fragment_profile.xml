<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:background="@drawable/bgprofile"/>

    <ImageView
        android:id="@+id/imgprof"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/img_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/namatxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgprof"
        android:text="Chatura."
        android:fontFamily="@font/averiasanslibre"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/emailtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namatxt"
        android:text="cathura@gmail.com"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_below="@+id/emailtxt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="50dp"
        android:layout_width="375dp"
        android:layout_height="190dp"
        android:background="@drawable/bgprofile2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="40dp">

            <TextView
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/averiasanslibre"
                android:textColor="@color/biru"/>

            <TextView
                android:id="@+id/namatxt2"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chatura"
                android:textSize="20sp"
                android:fontFamily="@font/averiasanslibre"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/averiasanslibre"
                android:textColor="@color/biru"/>

            <TextView
                android:id="@+id/emailtxt2"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cathura@gmail.com"
                android:textSize="20sp"
                android:fontFamily="@font/averiasanslibre"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>